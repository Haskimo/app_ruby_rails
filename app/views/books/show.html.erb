<h1><%= @le_livre.title %></h1>

<%= form_tag "/books/#{@le_livre.id}", method: "patch" do %>
  <input type="text" name="title" value="<%= @le_livre.title %>" />
  <input type="submit" value="Modifier le livre" />
<% end %>
<%= form_tag "/books/#{@le_livre.id}", method: "delete" do %>
  <input type="submit" value="Supprimer le livre" />
<% end %>
<p><a href="/books">Retourner à l’index</a></p>
